<nav class="navbar">     
        <ul id="mainNav" class="main-menu">
            <% const listItems = [
                    {name: 'Home', path: '/'},
                    {name: 'Products', path: '/products'},
                    {name: 'Brands', path: '/brands'},
                    {name: 'Categories', path: '/categories'}
                ];
                listItems.forEach((item) => { %>
                    <li class="nav-item">
                        <a href="<%= item.path %>" class="<%= path === item.path ? 'active' : '' %>"><%= item.name %></a>
                    </li> 
            <%  }) %>           
        </ul>
</nav>